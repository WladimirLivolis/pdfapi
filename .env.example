# PDF API Environment Variables
# Copy this file to .env and fill in your values
# NEVER commit the .env file to git

# ===================================
# Security Configuration
# ===================================

# User credentials (basic user with USER role)
SECURITY_USER_USERNAME=user
SECURITY_USER_PASSWORD=CHANGE_ME_user_strong_password_here

# Admin credentials (admin user with USER and ADMIN roles)
SECURITY_ADMIN_USERNAME=admin
SECURITY_ADMIN_PASSWORD=CHANGE_ME_admin_strong_password_here

# ===================================
# Application Configuration
# ===================================

# PDF output folder (relative or absolute path)
PDF_OUTPUT_FOLDER=./output/

# ===================================
# Optional: Spring Boot Configuration
# ===================================

# Server port (default: 8080)
# SERVER_PORT=8080

# Active profile (dev, prod, etc.)
# SPRING_PROFILES_ACTIVE=dev

# Log level
# LOGGING_LEVEL_ROOT=INFO
# LOGGING_LEVEL_COM_PDF_PDFAPI=DEBUG
